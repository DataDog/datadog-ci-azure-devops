{
    "manifestVersion": 1,
    "id": "synthetics-test-automation-azure-devops",
    "publisher": "Datadog",
    "version": "0.1.0",
    "name": "Datadog Synthetics CI",
    "description": "Run Datadog Synthetics CI tests as part of your Azure pipelines",
    "public": false,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "extension-icon.png"
    },
    "files": [
        {
            "path": "synthetics-run-tests-task"
        }
    ],
    "tags": [
        "azure",
        "azure-devops",
        "datadog",
        "synthetics",
        "test"
    ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "branding": {
        "color": "rgb(99, 44, 166)",
        "theme": "dark"
    },
    "links": {
        "learn": {
            "uri": "https://docs.datadoghq.com/"
        },
        "support": {
            "uri": "https://www.datadoghq.com/support/"
        },
        "privacypolicy": {
            "uri": "https://www.datadoghq.com/legal/privacy"
        },
        "license": {
            "uri": "https://www.datadoghq.com/legal/msa"
        }
    },
    "contributions": [
        {
            "id": "synthetics-test-automation-azure-devops",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "synthetics-run-tests-task"
            }
        },
        {
            "id": "datadog-service-endpoint",
            "description": "Service endpoint type for Datadog",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "helpMarkDown": "[Learn More](https://docs.datadoghq.com/account_management/api-app-keys/)",
            "properties": {
                "name": "datadog",
                "displayName": "Datadog",
                "url": {
                    "isVisible": "false"
                },
                "authenticationSchemes": [
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-token",
                        "inputDescriptors": [
                            {
                                "_comment": "We need to override this input and keep the original ID from the `ms.vss-endpoint.endpoint-auth-scheme-token` scheme",
                                "id": "apitoken",
                                "name": "i18n:API Key",
                                "description": "i18n:Your Datadog API key",
                                "inputMode": "textbox",
                                "isConfidential": true,
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string",
                                    "maxLength": 300
                                }
                            },
                            {
                                "id": "appkey",
                                "name": "i18n:APP Key",
                                "description": "i18n:Your Datadog APP key",
                                "inputMode": "textbox",
                                "isConfidential": true,
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string",
                                    "maxLength": 300
                                }
                            }
                        ]
                    }
                ]
            }
        }
    ]
}
